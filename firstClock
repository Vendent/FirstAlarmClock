import time,sys
import pygame
from pygame import mixer

mixer.init()


def sounds():
    sound = mixer.Sound("src/02599.wav")
    sound.play()

seconds = input("Hello, Sir! Please, enter seconds: ")
delay = float(seconds)

task = input("Enter your task: ")
print("One moment...")
time.sleep(1.1)
print("Your task ",task," Ready!")
print("Vremya poshlo...")
time.sleep(delay)
sounds()

time.sleep(15)
